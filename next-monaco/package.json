{
  "name": "next-monaco",
  "version": "0.0.0",
  "description": "Monaco Editor x Next.js",
  "files": [
    "dist/*"
  ],
  "type": "module",
  "main": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./editor": "./dist/editor/index.js"
  },
  "types": "./dist/src/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/src/index.d.ts"
      ],
      "editor": [
        "./dist/editor/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts editor/index.tsx --dts --format esm",
    "dev": "pnpm build --watch",
    "test": "jest"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest",
    "webpack": "latest"
  },
  "dependencies": {
    "monaco-editor": "^0.34.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^7.0.1",
    "vscode": "npm:@codingame/monaco-vscode-api@~1.69.0"
  }
}
