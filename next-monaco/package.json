{
  "name": "next-monaco",
  "version": "0.0.0",
  "description": "Monaco Editor x Next.js",
  "files": [
    "dist/*"
  ],
  "type": "module",
  "main": "./dist/server/index.js",
  "exports": {
    ".": "./dist/server/index.js",
    "./plugin": "./dist/plugin/index.js"
  },
  "types": "./dist/server/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/server/index.d.ts"
      ],
      "plugin": [
        "./dist/plugin/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup plugin/index.ts setup/index.ts client/index.tsx server/index.tsx --dts --format esm",
    "dev": "pnpm build --watch",
    "test": "jest"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest",
    "webpack": "latest"
  },
  "dependencies": {
    "@code-hike/lighter": "^0.6.4",
    "@typescript/ata": "^0.9.3",
    "copy-webpack-plugin": "^11.0.0",
    "monaco-editor": "^0.37.1",
    "node-fetch": "^3.3.1",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "server-only": "^0.0.1",
    "typescript": "^4.9.5",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^9.0.0",
    "vscode": "npm:@codingame/monaco-vscode-api@1.78.0",
    "yauzl": "^2.10.0"
  }
}
